# Global .gitconfig

[user]
	name = Jay Qi
	email = jayqi@users.noreply.github.com
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers

# Enable signing with 1Password if the signer exists
[includeIf "command:test -x /Applications/1Password.app/Contents/MacOS/op-ssh-sign"]
	path = ~/.config/git/config-signing-1password.conf

# Usage settings
[branch]
	sort = -committerdate
[core]
	excludesfile = ~/.config/git/ignore
	editor = nano
[color]
	ui = true
[diff]
	algorithm = histogram
	colorMoved = default
[init]
	defaultBranch = main
[merge]
	conflictstyle = zdiff3
[pull]
	ff = only
[push]
	autoSetupRemote = true
[status]
	showUntrackedFiles = all

# Enable difftastic as difftool if difft is installed
[includeIf "command:command -v difft >/dev/null 2>&1"]
	path = ~/.config/git/config-difftastic.conf
